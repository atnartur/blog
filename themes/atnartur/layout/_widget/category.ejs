<% if (site.categories.length){ %>
	<h2>Категории</h2>
	<div class="list-group">
		<% site.categories.sort('name').each(function(item){ %>
			<a href="<%- config.root %><%- item.path %>" class="list-group-item"><%= item.name %> <small><%= item.posts.length %></small></a>
		<% }); %>
	</div>    
<% } %>