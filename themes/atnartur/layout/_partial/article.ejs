<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope itemprop="blogPost">
	<% if (post.link || post.title){ %>
		<%- partial('post/title', {class_name: 'article-title'}) %>
	<% } %>
	
	<div class="post_content">
		<% if (post.excerpt && index){ %>
			<%- post.excerpt %>
	  	<% } else { %>
			<%- post.content %>
	  	<% } %>
	</div>
	
	<div class="post_footer">
		<div class="post_info">	
			<i class="fa fa-calendar-o"></i> <%- partial('post/date', {class_name: 'article-date', date_format: null}) %> 
			<% if(post.layout == 'post'){ %> |
				<i class="fa fa-folder-o"></i> <%- partial('post/category') %> 
				<% if (!post.excerpt && !index){ %> |
					<i class="fa fa-tag"></i> <%- partial('post/tag') %>
				<% } %>
			<% } %>
		</div>
		<% if (post.excerpt && index){ %>
			<% if (theme.excerpt_link){ %>
				<a href="<%- url_for(post.path) %>#more" class="read_more">
					<%= theme.excerpt_link %> <i class="fa fa-long-arrow-right"></i>
				</a>
			<% } %>
		<% } else { %>
			<%- partial('post/share_buttons') %>
		<% } %>
	</div>
</article>
<% if (!index && post.comments && config.disqus_shortname){ %>
	<section id="comments">
	  	<div id="disqus_thread">
			<noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	  	</div>
	</section>
<% } %>